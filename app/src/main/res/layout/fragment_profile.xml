    <LinearLayout
        android:id="@+id/ll_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_l1"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/ll_ageFilterSpinner"
            android:layout_width="0dp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_weight="1"
            android:background="@drawable/rounder_border_spinner"
            android:paddingStart="@dimen/_5sdp">

            <Spinner
                android:id="@+id/spinner_ageFilter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/orange"
                android:drawSelectorOnTop="true"
                android:gravity="center_vertical"
                android:popupBackground="@drawable/choose_level_bg"
                android:textColor="@color/colorText" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_villageFilterSpinner"
            android:layout_width="0dp"
            android:layout_height="@dimen/_24sdp"
            android:layout_below="@+id/ll_ageFilterSpinner"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_weight="1"
            android:background="@drawable/rounder_border_spinner"
            android:paddingStart="@dimen/_5sdp">

            <Spinner
                android:id="@+id/spinner_villageFilter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/orange"
                android:drawSelectorOnTop="true"
                android:gravity="center_vertical"
                android:popupBackground="@drawable/choose_level_bg"
                android:textColor="@color/colorText" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_examDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_filter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_sync"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:backgroundTint="@color/orange"
        android:src="@drawable/ic_sync_white_48dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_db_sync"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:backgroundTint="@color/orange"
        android:src="@drawable/ic_insert_drive_file_black_24dp" />

</RelativeLayout>