<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context="com.kix.assessment.ui.splash_activity.SplashActivity">

    <com.kix.assessment.custom.NonSwipeableViewPager
        android:id="@+id/fragment_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="N"
        android:visibility="gone"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/colorText"
        android:layout_margin="@dimen/_5sdp"/>
    <RelativeLayout
        android:id="@+id/parent_dots_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentBottom="true">

        <com.kix.assessment.custom.dots_indicator.WormDotsIndicator
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_5sdp"
            app:dotsColor="@color/white"
            app:dotsCornerRadius="5dp"
            app:dotsSize="10dp"
            app:dotsSpacing="2dp"
            app:dotsStrokeColor="@color/light_green"
            app:dotsStrokeWidth="1dp" />
    </RelativeLayout>

</RelativeLayout>