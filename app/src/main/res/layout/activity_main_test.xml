<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splash_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--
    <WebView
        android:id="@+id/loadPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
-->
    <com.kix.assessment.custom.NonSwipeableViewPager
        android:id="@+id/fragment_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rl_gameover"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_thankyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:textSize="@dimen/_20sdp"
            android:text="Thank you!!!\nYour assessment is submitted."/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_thankyou"
            android:text="Next Student"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textAlignment="center"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/colorBtnGreenDark"
            app:rippleColor="@color/colorBtnGreenDark"
            android:textAppearance="@dimen/_5sdp"
            android:textColor="@color/colorBtnGreenDark"
            android:textSize="@dimen/_10sdp"
            app:cornerRadius="@dimen/_20sdp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="N"
        android:visibility="gone"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/colorText"
        android:layout_margin="@dimen/_5sdp"/>

    <RelativeLayout
        android:id="@+id/parent_dots_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentBottom="true">

        <com.kix.assessment.custom.dots_indicator.WormDotsIndicator
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_5sdp"
            app:dotsColor="@color/colorBtnRedDark"
            app:dotsCornerRadius="5dp"
            app:dotsSize="10dp"
            app:dotsSpacing="2dp"
            app:dotsStrokeColor="@color/colorBtnRedDark"
            app:dotsStrokeWidth="1dp" />
    </RelativeLayout>

</RelativeLayout>