                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_V06a"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_V06a_val"
