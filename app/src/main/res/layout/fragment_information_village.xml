                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_V06a_val"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:text="Government/Public, Private"
                    android:textColor="@color/colorSignBoard"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="italic|bold" />
            </RelativeLayout>
            <View style="@style/Divider"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_10sdp">

                <TextView
                    android:id="@+id/lbl_V07a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_V07a"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_V07a_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbl_V07a"
