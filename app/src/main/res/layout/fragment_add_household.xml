<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.household_activity.Fragment_AddHousehold"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/rl_parentLayout">

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add HouseHold"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:textColor="@color/colorText"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_30sdp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_100sdp"
        android:layout_marginEnd="@dimen/_100sdp"
        android:layout_below="@+id/tv_label"
        android:hint="Name">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_houseHoldName"
            android:imeOptions="actionNext"
            android:layout_marginBottom="8dp"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_label1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_100sdp"
        android:layout_marginEnd="@dimen/_100sdp"
        android:layout_below="@+id/til_label"
        android:hint="Address">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_houseHoldAddress"
            android:imeOptions="actionDone"
            android:layout_marginBottom="8dp"
            android:inputType="textMultiLine"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_saveHousehold"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_label1"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Save"
        android:textAlignment="center"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        app:cornerRadius="@dimen/_20sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:textAppearance="@dimen/_5sdp"/>


</RelativeLayout>