<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="@dimen/_240sdp"
    android:layout_height="@dimen/_150sdp"
    android:layout_gravity="center"
    android:background="@color/full_transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_bg">

        <TextView
            android:id="@+id/dialog_file_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:gravity="center"
            android:lines="2"
            android:paddingHorizontal="@dimen/_2sdp"
            android:text=""
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_15sdp" />

        <ProgressBar
            android:id="@+id/dialog_roundProgress"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="@dimen/_5sdp"
            android:theme="@style/AppTheme.RoundProgress"
            android:indeterminateTint="@color/colorBtnGreenDark"
            android:visibility="gone" />

        <com.kix.assessment.custom.progress_layout.ProgressLayout
            android:id="@+id/dialog_progressLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            app:c_progress="0"
            app:c_progressRadius="@dimen/_8sdp"
            app:c_progressColor="@color/colorBtnGreenDark"
            card_view:c_borderWidth="5dp"
            card_view:c_isShowDesc="false"
            card_view:c_max="100" />

        <Button
            android:id="@+id/btn_dw_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_alignParentBottom="true"
            android:text="@string/Okay"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>