<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/_240sdp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_bg"
        android:elevation="@dimen/_5sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp">

        <TextView
            android:id="@+id/dia_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginVertical="@dimen/_10sdp"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_7sdp"
            android:text="@string/exit_statement"
            android:textColor="@color/colorText"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dia_title"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dia_exit"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp"
                android:text="YES"
                android:textAlignment="center"
                android:textAppearance="@dimen/_5sdp"
                android:textColor="@color/colorBtnGreenDark"
                android:textSize="@dimen/_10sdp"
                app:cornerRadius="@dimen/_20sdp"
                app:rippleColor="@color/colorBtnGreenDark"
                app:strokeColor="@color/colorBtnGreenDark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dia_cancel"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp"
                android:text="NO"
                android:textAlignment="center"
                android:textAppearance="@dimen/_5sdp"
                android:textColor="@color/colorBtnRedDark"
                android:textSize="@dimen/_10sdp"
                app:cornerRadius="@dimen/_20sdp"
                app:rippleColor="@color/colorBtnRedDark"
                app:strokeColor="@color/colorBtnRedDark" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>